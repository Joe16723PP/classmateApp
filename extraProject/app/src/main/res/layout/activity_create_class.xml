<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateClassActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Class Details"
            android:textColor="@color/writegray"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="30dp"
                    android:text="Title"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:ems="12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="30dp"
                    android:text="Days"
                    android:textSize="13sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rgOperator"
                    android:checkedButton="@id/rbMon"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp">

                    <RadioButton
                        android:id="@+id/rbMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textSize="8sp"/>

                    <RadioButton
                        android:id="@+id/rbTue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Tue"
                        android:textSize="8sp"/>

                    <RadioButton
                        android:id="@+id/rbWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Wed"
                        android:textSize="8sp"/>

                    <RadioButton
                        android:id="@+id/rbThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Thu"
                        android:textSize="8sp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rgOperator2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/rbMon"
                    android:orientation="horizontal"
                    android:paddingLeft="53dp">

                    <RadioButton
                        android:id="@+id/rbFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Fri"
                        android:textSize="8sp"/>

                    <RadioButton
                        android:id="@+id/rbSat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:text="Sat"
                        android:textSize="8sp"/>

                    <RadioButton
                        android:id="@+id/rbSun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Sun"
                        android:textSize="8sp"/>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/start_timePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="START"
                    android:textSize="10sp"
                    android:layout_marginRight="40dp"
                    android:background="@color/writegray"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/end_timePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="END"
                    android:textSize="10sp"
                    android:layout_marginRight="50dp"
                    android:background="@color/writegray"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:text="Colors"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/red_color"
                    android:layout_width="0dp"
                    android:layout_height="4mm"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:layout_marginLeft="15dp" />

                <Button
                    android:id="@+id/brown_color"
                    android:layout_width="0dp"
                    android:layout_height="4mm"
                    android:layout_weight="1"
                    android:background="@color/brown"
                    android:layout_marginLeft="12dp"/>

                <Button
                    android:id="@+id/pink_color"
                    android:layout_width="0dp"
                    android:layout_height="4mm"
                    android:layout_weight="1"
                    android:background="@color/pink"
                    android:layout_marginLeft="12dp"/>

                <Button
                    android:id="@+id/blue_color"
                    android:layout_width="0dp"
                    android:layout_height="4mm"
                    android:layout_weight="1"
                    android:background="@color/blue"
                    android:layout_marginLeft="12dp"/>

                <Button
                    android:id="@+id/green_color"
                    android:layout_width="0dp"
                    android:layout_height="4mm"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:layout_marginLeft="12dp"/>

                <Button
                    android:id="@+id/black_color"
                    android:layout_width="0dp"
                    android:layout_height="4mm"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:layout_marginLeft="12dp"/>

                <Button
                    android:id="@+id/purple_color"
                    android:layout_width="0dp"
                    android:layout_height="4mm"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Number of times"
                    android:textSize="13sp" />

                <NumberPicker
                    android:id="@+id/nopicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center">
                </NumberPicker>

                <TextView
                    android:id="@+id/tv_numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:layout_marginRight="80dp"
                    android:text="= "/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:paddingBottom="5dp"
                    android:text="Course Start Date"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="30dp"
                    android:paddingBottom="5dp"
                    android:text="Course End Date"
                    android:textSize="13sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="Start Date"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:background="@color/writegray"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:text="End Date"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:background="@color/writegray"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>