<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".CreateClassActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/details_card"
        android:layout_margin="30dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="30dp"
        android:padding="50dp"
        app:cardBackgroundColor="@color/colorDetails"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/details"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Details"
            android:textColor="@color/write"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/linearBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_card"
        android:layout_marginTop="20dp"
        android:background="@color/colorMiddle"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:elevation="20dp">


            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_event"
                android:drawablePadding="10dp"
                android:hint="Enter Event Name" />


        <LinearLayout
            android:id="@+id/linearCheckbox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearName"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days"
                android:drawablePadding="10dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_day"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cbMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Mon"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/cbTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Tue"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/cbWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Wed"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/cbThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Thu"
                android:onClick="onCheckboxClicked"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCheckbox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearCheckbox1"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="20dp">

            <CheckBox
                android:id="@+id/cbFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/cbSat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Sat"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/cbSun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Sun"
                android:onClick="onCheckboxClicked"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearCheckbox2"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_time"
                android:layout_marginLeft="5dp"
                android:text="Time"
                android:textSize="20sp"
                android:drawablePadding="10dp"/>


            <TextView
                android:id="@+id/start_timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:hint="Start time"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/end_timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="End time"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearTime"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Event Start Date"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39dp"
                android:text="Event End Date"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearDate"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/start_datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:hint="Start Date"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/end_datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:gravity="center"
                android:hint="End date"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create Event"
        android:textAllCaps="false"
        android:elevation="20dp"
        android:textColor="@color/write"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/selector_btn_details" />

</RelativeLayout>