<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsEvent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgView"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:src="@drawable/header"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_header"
                        app:cardBackgroundColor="#60000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="20dp"
                        app:cardCornerRadius="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="80dp">

                        <TextView
                            android:id="@+id/tv_eventImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="joedsjglsjgsdj"
                            android:textSize="50dp"
                            android:textStyle="bold"
                            android:textColor="@color/write"
                            android:padding="10dp"
                            android:gravity="center"/>

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:id="@+id/tv_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details Event"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/headcreate"
                        android:layout_below="@id/imgView"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/tv_details"
                        android:text="Event Name : "
                        android:drawableLeft="@drawable/ic_event"
                        android:drawablePadding="10dp"
                        android:textSize="17sp"
                        android:paddingLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_event2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_event"
                        android:layout_below="@id/tv_details"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Event Name"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_event"
                        android:layout_marginTop="20dp"
                        android:text="Days : "
                        android:drawableLeft="@drawable/ic_day"
                        android:drawablePadding="10dp"
                        android:textSize="17sp"
                        android:paddingLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_day2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_day"
                        android:layout_below="@id/tv_event"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Days Event"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_day"
                        android:layout_marginTop="20dp"
                        android:text="Time : "
                        android:drawableLeft="@drawable/ic_time"
                        android:drawablePadding="10dp"
                        android:textSize="17sp"
                        android:paddingLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_time"
                        android:layout_below="@id/tv_day"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Time Event"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/tv_strdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_time"
                        android:layout_marginTop="20dp"
                        android:text="Start Date : "
                        android:drawableLeft="@drawable/ic_strtime"
                        android:drawablePadding="10dp"
                        android:textSize="17sp"
                        android:paddingLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_strdate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_strdate"
                        android:layout_below="@id/tv_time"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Start Date Event"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/tv_enddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_strdate"
                        android:layout_marginTop="20dp"
                        android:text="End Date : "
                        android:drawableLeft="@drawable/ic_strtime"
                        android:drawablePadding="10dp"
                        android:textSize="17sp"
                        android:paddingLeft="20dp"/>

                    <TextView
                        android:id="@+id/tv_enddate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_enddate"
                        android:layout_below="@id/tv_strdate"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:hint="End Date Event"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/tv_eventCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_enddate"
                        android:layout_marginTop="20dp"
                        android:text="Event Count : "
                        android:drawableLeft="@drawable/ic_event"
                        android:drawablePadding="10dp"
                        android:textSize="17sp"
                        android:paddingLeft="20dp" />

                    <TextView
                        android:id="@+id/tv_eventCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_eventCount"
                        android:layout_below="@id/tv_enddate"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Event Count"
                        android:textSize="17sp"/>

                    <Button
                        android:id="@+id/checkEventBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_eventCount"
                        android:drawableLeft="@drawable/location"
                        android:shadowRadius="20"
                        android:background="@drawable/select_btn_details"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="25dp"
                        android:text="Check Event"
                        android:drawablePadding="10dp"
                        android:padding="10dp"/>

                    <Button
                        android:id="@+id/mapBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/map"
                        android:drawablePadding="10dp"
                        android:layout_below="@id/tv_eventCount2"
                        android:text="Show Map"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@id/checkEventBtn"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="20dp"
                        android:padding="10dp"
                        android:shadowRadius="20"
                        android:background="@drawable/select_btn_details"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_margin="15dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/headcreate"
                            android:text="Event logs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:paddingLeft="20dp"
                            android:id="@+id/days_log"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>